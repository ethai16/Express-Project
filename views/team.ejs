    <main class = "d-flex flex-column align-items-center">
            <h1><%= fullTeamName%></h1>
            <img src ="/images/<%=teamShortNameOnly%>/<%=teamNameOnly%>_logo.png">
            <div>Mascot: <%=teamMascot%></div>
            <div>Championships Won: <%=championships%></div>
            <div>Starting Five: </div>
            <div class = "container-fluid d-flex justify-content-center">
            <% if (startingFive.length > 0 && teamNameOnly == 'Rockets' ) { %>
                <% for (i=0; i< startingFive.length; i++) { %>
                    <div style ="display:inline-block" >
                    <div class = "m-3" style = "background-image:url(/images/backgrounds/rockets-site-bg_01.png);background-color:#2b3036;background-size: contain;border-radius:50%; height:10vw; width: 10vw; overflow: hidden">
                        <a href="/player/<%= [i] %>" class ="d-flex flex-column align-items-center justify-content-center"><img src ="/images/<%=teamShortNameOnly%>/<%=players[i].shortname%>.png"></a> 
                    </div> 
                    <div class = "d-flex justify-content-center"><%=players[i].name%></div>
                    </div>
                    <% } %>
            <% } %>
            <% if (startingFive.length > 0 && teamNameOnly == 'Spurs' ) { %>
                <% for (j=5; j< 10; j++) { %>
                    <div style ="display:inline-block" >
                            <div class = "m-3" style = "background-image:url(/images/backgrounds/rockets-site-bg_01.png);background-color:#2b3036;background-size: contain;border-radius:50%; height:10vw; width: 10vw; overflow: hidden">
                                <a href="/player/<%= [j] %>" class ="d-flex flex-column align-items-center justify-content-center"><img src ="/images/<%=teamShortNameOnly%>/<%=players[j].shortname%>.png"></a> 
                            </div> 
                            <div class = "d-flex justify-content-center"><%=players[j].name%></div>
                            </div>
                    <% } %>
            <% } %>
            <% if (startingFive.length > 0 && teamNameOnly == 'Mavericks' ) { %>
                <% for (k=10; k< 15; k++) { %>
                    <div style ="display:inline-block" >
                            <div class = "m-3" style = "background-image:url(/images/backgrounds/rockets-site-bg_01.png);background-color:#2b3036;background-size: contain;border-radius:50%; height:10vw; width: 10vw; overflow: hidden">
                                <a href="/player/<%= [k] %>" class ="d-flex flex-column align-items-center justify-content-center"><img src ="/images/<%=teamShortNameOnly%>/<%=players[k].shortname%>.png"></a> 
                            </div> 
                            <div class = "d-flex justify-content-center"><%=players[k].name%></div>
                            </div>
                    <% } %>
            <% } %>
            </div>
            

    </main>
