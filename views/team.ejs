    <div id ="mainholder" class = "container-fluid" style = "overflow:auto">
    <main class="container d-flex flex-column align-items-center p-0 mt-3" style = "background-color:lightgrey; border-radius:5px">
        <div class ="container d-flex align-items-center justify-content-center" style="text-align: center;color:white; height:70vh; background-image: url(<%=banner%>); background-size:100% 100%; background-repeat: no-repeat">
        </div>
        <nav id ="navbar2" class="container navbar navbar-expand-sm bg-dark navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            Players
                        </a>
                        <div class="dropdown-menu">
                                <% if (players.length > 0) { %>
                                    <% for (i=0; i< players.length; i++) { %>
                                        <% if (teamShortNameOnly === players[i].teamshort) { %>
                                        <a class="dropdown-item" href="/player/<%=players[i].name%>"><%=players[i].name%></a>  
                                        <% } %>
                                    <% } %>
                                <% } %>
                        </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
            </ul>
        </nav>

        <div class = "container d-flex justify-content-between pt-5">
            <div class = "container-fluid d-flex" >
                <div style = "display:inline-block;flex-basis: auto">
                    <img src="/images/<%=teamShortNameOnly%>/<%=teamNameOnly%>_logo.png">
                </div>
                <div class = "d-flex justify-content-between align-items-center">
                        <%=info%>
                </div>
            </div>
        </div>

            <div style = "display:inline-block">
                <% if (startingFive.length > 0 && teamNameOnly == 'Rockets' ) { %>
                <% for (i=0; i< startingFive.length; i++) { %>
                <div style="display:inline-block">
                    <div class="m-3" style="background-image:url(/images/backgrounds/rockets-site-bg_01.png);background-color:#2b3036;background-size: contain;border-radius:50%; height:10vw; width: 10vw; overflow: hidden">
                        <a href="/player/<%=players[i].name%>" class="d-flex flex-column align-items-center justify-content-center"><img style ="width:150%"
                                src="/images/<%=teamShortNameOnly%>/<%=players[i].shortname%>.png"></a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <%=players[i].name%>
                    </div>
                </div>
                <% } %>
                <% } %>
                <% if (startingFive.length > 0 && teamNameOnly == 'Spurs' ) { %>
                <% for (j=5; j< 10; j++) { %>
                <div style="display:inline-block">
                    <div class="m-3" style="background-image:url(/images/backgrounds/rockets-site-bg_01.png);background-color:#2b3036;background-size: contain;border-radius:50%; height:10vw; width: 10vw; overflow: hidden">
                        <a href="/player/<%= [j] %>" class="d-flex flex-column align-items-center justify-content-center"><img
                                src="/images/<%=teamShortNameOnly%>/<%=players[j].shortname%>.png"></a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <%=players[j].name%>
                    </div>
                </div>
                <% } %>
                <% } %>
                <% if (startingFive.length > 0 && teamNameOnly == 'Mavericks' ) { %>
                <% for (k=10; k< 15; k++) { %>
                <div style="display:inline-block">
                    <div class="m-3" style="background-image:url(/images/backgrounds/rockets-site-bg_01.png);background-color:#2b3036;background-size: contain;border-radius:50%; height:10vw; width: 10vw; overflow: hidden">
                        <a href="/player/<%= [k] %>" class="d-flex flex-column align-items-center justify-content-center"><img
                                src="/images/<%=teamShortNameOnly%>/<%=players[k].shortname%>.png"></a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <%=players[k].name%>
                    </div>
                </div>
                <% } %>
                <% } %>
            </div>



    </main>
